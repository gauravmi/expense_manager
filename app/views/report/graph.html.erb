<div class="report-filter container-fluid report_style">
  <%= form_for(:report, :url => report_view_path, :method => 'POST') do |f| %>
      <div class="form-group col-xs-6" style="margin-bottom:0">
        <%= check_box_tag :food_check %>
        <label>Food</label>
      </div>
      <div class="form-group col-xs-4" style="margin-bottom:0">
        <%= radio_button_tag 'mode', 'savings' %>
        <label>Savings</label>
      </div>
      <div> <%= f.date_select(:date) %></div>

      <div class="form-group col-xs-6" style="margin-bottom:0">
        <%= check_box_tag :giving_check %>
        <label>Giving</label>
      </div>
      <div class="form-group col-xs-4" style="margin-bottom:0">
        <%= radio_button_tag 'mode', 'expenses' %>
        <label>Expenses</label>
      </div>
      <div class="form-group col-xs-6" style="margin-bottom:0">
        <%= check_box_tag :shelter_check %>
        <label>Shelter</label>
      </div>
      <div class="form-group col-xs-8" style="margin-bottom:0">
        <%= check_box_tag :utilities_check %>
        <label>Utilities</label>
      </div>
      <div class="form-group col-xs-6" style="margin-bottom:0">
        <%= check_box_tag :transportation_check %>
        <label>Transportation</label>
      </div>
      <div class="form-group col-xs-6" style="margin-bottom:0">
        <%= f.submit "Apply", class: "apply-button btn btn-primary" %>
      </div>
  <% end %>
</div>
<div id="chart"></div>
<div id="chart-category" style="margin-top:20px ">
  <script>
      var columns = <%= @resultant.to_json.html_safe %>;
      var chart = c3.generate({
          bindto: '#chart-category',
          data: {
              columns: columns,
              type: 'bar'
          },
          bar: {
              width: {
                  ratio: 0.5
              }
          }
      });
  </script>
</div>