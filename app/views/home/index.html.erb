<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
<%= bootstrap_form_for(:expense, url: expense_index_path, method: 'Post') do |f| %>
	<% f.hidden_field :expense %>
	<% f.hidden_field :date %>
	<% f.hidden_field :sub_cat_id %>
	<% f.hidden_field :user_id %>

	<div><abbr title=""> <h3><small>Add amount</small></h3></abbr></div>
	<% @amount_list.each_with_index do |amount,index|%>
		<button id="amount#{index}" class="btn btn-default"><span class="glyphicon glyphicon-plus" aria-hidden="true"><%=amount.amount%></span></button>
	<% end %>

	<button id='add-money-button' class="btn btn-default" data-toggle="modal" data-target="#add-money-form"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
	
	<%=f.datetime_select(:date )%>

	<div><abbr title=""> <h3><small>Select Category</small></h3></abbr></div>
	<% @category_list.each_with_index do |category,index|%>
		<button id="category#{index}" class="btn btn-default"><span class="glyphicon" aria-hidden="true"><%=category.name%></span></button>
	<% end %>

	<button id='add-category' class="btn btn-default" data-toggle="modal" data-target="#add-sub-category-form"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
	
	<br>
	<%= f.submit 'Submit Expense', id: 'main-submit-expense', class: 'btn btn-primary center-block' %>
<% end %>

<%= render :partial=>'add_amount_form'%>
<%= render :partial=>'add_sub_category_form'%>
</body>
</html>