<table class="table table-hover">
  <% @per_day_expenses_grouped_by_month.each { |month_year, date_expenses| %>
      <tr class="success">
        <td><%= month_year %></td>
        <td><%= date_expenses.reduce(0) { |sum, expense_object| sum + expense_object[:expense_for_the_day] } %></td>
      </tr>
      <% date_expenses.each { |expense| %>
          <tr>
            <td><%= expense[:expense_date] %></td>
            <td><%= expense[:expense_for_the_day] %></td>
          </tr>
      <% } %>
  <% } %>
</table>